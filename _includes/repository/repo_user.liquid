<div class="row">
  <div class="col-md-6.5">
    <div class="repo p-2 text-center">
      <a href="https://github.com/{{ include.username }}">
        <img
          class="repo-img-light w-40"
          alt="{{ include.username }}"
          src="https://github-readme-stats.vercel.app/api/?username={{ include.username }}&theme=radical&hide_border&show_icons=true"
          style="height: 180px;"
        >
      </a>
    </div>
  </div>
  <div class="col-md-4">
    <div class="repo p-2 text-center">
      <a href="https://github.com/{{ include.username }}">
        <img
          class="repo-img-light w-250"
          alt="{{ include.username }}"
          src="https://github-readme-stats.vercel.app/api/top-langs/?username=chryssanab&theme=radical&show_icons=true&hide=HTML,Liquid,Javascript&hide_border&layout=compact"
          style="height: 180px;"
        >
      </a>
    </div>
  </div>
</div>
